{
	"trailingComma": "none",
	"useTabs": true,
	"tabWidth": 2,
	"bracketSpacing": true,
	"semi": true,
	"singleQuote": true,
	"singleAttributePerLine": true,
	"overrides": [
		{
			"files": "**/lwc/**/*.html",
			"options": { "parser": "lwc" }
		},
		{
			"files": "*.{cmp,page,component}",
			"options": { "parser": "html" }
		}
	]
}
